<manifest package="uk.ac.uclan.courseexplorer"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission> 

    <application
        android:icon="@drawable/iconbig"
        android:label="@string/app_name"
        android:name="GlobalState" >
        
        <activity
            android:name=".CourseExplorerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

                <activity
            android:name=".CEAdvancedSearch"
            android:label="CE Advanced Search" >
            <intent-filter>
                <action android:name="uk.ac.uclan.CEADVANCEDSEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name=".CESearchList"
            android:label="CE Search List" >
            <intent-filter>
                <action android:name="uk.ac.uclan.CESEARCHLIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="CECourseDetails"
            android:label="CE Course Details" >
            <intent-filter>
                <action android:name="uk.ac.uclan.CECOURSEDETAILS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
                        <activity
            android:name="CEInformation"
            android:label="CEInformation" >
            <intent-filter>
                <action android:name="uk.ac.uclan.CEINFORMATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>
</manifest>
